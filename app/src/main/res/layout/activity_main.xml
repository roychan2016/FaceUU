<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xuweichen.faceuu.MainActivity">

    <com.xuweichen.imagefilter.widget.CameraGLSurface
        android:id="@+id/camera_surface"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/photo_button_margin_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/beautiful_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/beautiful_size"
            android:layout_weight="1.0"
            android:src="@mipmap/beautiful"/>

        <ImageView
            android:id="@+id/photo_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/photo_button_size"
            android:layout_weight="1.0"
            android:src="@mipmap/photo_button"/>

        <ImageView
            android:id="@+id/filter_button"
            android:layout_width="0dp"
            android:layout_height="@dimen/beautiful_size"
            android:layout_weight="1.0"
            android:src="@mipmap/filter"/>
    </LinearLayout>
</RelativeLayout>
